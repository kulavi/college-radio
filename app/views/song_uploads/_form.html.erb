<%= form_for @song_upload, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :song_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :song_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                song_uploads_path, :class => 'btn' %>
  </div>
<% end %>
