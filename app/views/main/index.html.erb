<%- model_class = Song -%>
<div class="page-header">
  <h1> All <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

 
<section id="sidebar">  
    <h2>Listen Audio</h2>  
    <section id="audio">  
        No song is currently playing.  
    </section>  

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:language_id) %></th>
      <th><%= model_class.human_attribute_name(:tag_id) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%= model_class.human_attribute_name(:listen) %></th>
      <th><%= model_class.human_attribute_name(:download) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% if @songs.present? %>
    <% @songs.each do |song| %>
      <tr>
        <% if song.song_upload.present? %>
        <td><%= song.name %></td>
        <td><%= song.category.name %></td>
        <td><%= song.language.name %></td>
        <td><%= song.tag.name %></td>
        <td><%= File.basename(song.song_upload.file.path) %></td>
        <td><%= link_to "Audio", song.song_upload.file.url, :class => "html5" %></td> 
        <td><%= link_to "Download", song.song_upload.file.url %></td>  
        <td><%= song.city.name %></td>
        <% end %>
      </tr>
    <% end %>
    <% else %>
    <tr>
      <td>No songs uploaded!</td>
    </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to t('.new', :default => t("helpers.links.new")),
            new_song_path,
            :class => 'btn btn-primary' %>

<script type="text/javascript">
$(document).ready(function() {  
    var audioSection = $('section#audio');  
    $('a.html5').click(function() {  
        var audio = $('<audio>', {  
             controls : 'controls'  
        });  
        var url = $(this).attr('href');  
        $('<source type="audio/mpeg" title="something">').attr('src', url).appendTo(audio);  
        audioSection.html(audio);  
        return false;  
    });  
}); 
</script>
