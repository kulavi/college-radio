<% if categories.present? %>
<ul class="nav nav-list">
  <li class="nav-header">Categories</li>
  <% categories.each do |catg| %>
    <li><%= link_to catg.name, {:action => 'songs_by_cat', :controller => 'main', :id => catg.id }, :class => "catg_#{catg.id}", :remote => true %></li>
  <% end %>
</ul>
<% end %>
